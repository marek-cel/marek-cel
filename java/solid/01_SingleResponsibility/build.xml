<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/SingleResponsibility.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="pl.marekcel.dev.cel.java.solid.SingleResponsibility.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="build/jar/SingleResponsibility.jar" fork="true"/>
    </target>

</project>
