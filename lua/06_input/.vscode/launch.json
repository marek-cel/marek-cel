// A launch configuration that compiles the extension and then opens it inside a new window
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "lua": "lua5.4",
                "file": "${file}"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}